---
import Card from '../ui/Card.astro';

interface Props {
  title: string;
  excerpt: string;
  date: string;
  category: string;
  slug: string;
  imageUrl: string;
}

const { title, excerpt, date, category, slug, imageUrl } = Astro.props;
---
<Card>
  <img src={imageUrl} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <div class="flex items-center gap-4 mb-4">
      <span class="text-sm text-gray-500">{date}</span>
      <span class="px-2 py-1 bg-primary-100 text-primary-700 rounded-md text-sm">{category}</span>
    </div>
    <h3 class="text-xl font-semibold text-gray-900 mb-2">
      <a href={`/blog/${slug}`} class="hover:text-primary-600">{title}</a>
    </h3>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <a href={`/blog/${slug}`} class="text-primary-600 hover:text-primary-700 font-medium">
      Read More â†’
    </a>
  </div>
</Card>