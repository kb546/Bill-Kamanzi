---
import { Image } from 'astro:assets';
import Card from '../ui/Card.astro';

interface Props {
  title: string;
  description: string;
  imageUrl: string;
}

const { title, description, imageUrl } = Astro.props;
---

<Card class="hobby-card overflow-hidden h-full">
  <div class="flex flex-col h-full">
    <div class="relative aspect-[4/3] overflow-hidden bg-gray-100">
      <Image 
        src={imageUrl} 
        alt={title} 
        width={400}
        height={300}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
        decoding="async"
        format="webp"
        quality={80}
      />
    </div>
    <div class="p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-2">{title}</h3>
      <p class="text-gray-600 text-sm">{description}</p>
    </div>
  </div>
</Card>

<style>
  .hobby-card {
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease-in-out;
    background: #ffffff;
  }

  .hobby-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  /* Responsive image container using aspect ratio */
  @media (max-width: 640px) {
    .aspect-[4/3] {
      height: 200px; /* Smaller height for mobile */
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    .aspect-[4/3] {
      height: 240px; /* Medium height for tablets */
    }
  }

  @media (min-width: 1025px) {
    .aspect-[4/3] {
      height: 280px; /* Larger height for desktop */
    }
  }
</style>