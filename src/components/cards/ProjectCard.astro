// Use project-specific icon if available, otherwise fall back to category icon
const getIcon = (title: string, category: string) => {
  return projectIcons[title] || categoryIcons[category];
};
---

<Card class="project-card group">
  <div class="card-inner">
    <!-- Category Icon -->
    <div class="icon-container">
      <div class="icon-wrapper">
        <Fragment set:html={getIcon(title, category)} />
      </div>
    </div>

    <!-- Content -->
    <div class="content-container">
      <div class="text-content">
        <h3 class="card-title line-clamp-1">
          {title}
        </h3>
        <p class="card-description">{description}</p>
      </div>

      <!-- Technologies -->
      <div class="tech-container">
        <div class="tech-tags">
          {technologies.slice(0, 4).map(tech => (
            <span class="tech-tag">
              {tech}
            </span>
          ))}
          {technologies.length > 4 && (
            <span class="more-tag">
              +{technologies.length - 4} more
            </span>
          )}
        </div>
      </div>
    </div>

    <!-- Links -->
    <div class="links-container">
      {githubUrl && (
        <a 
          href={githubUrl}
          class="action-link"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
          </svg>
          Code
        </a>
      )}
      {liveUrl && (
        <a 
          href={liveUrl}
          class="action-link"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          Demo
        </a>
      )}
    </div>
  </div>
</Card>

<style>
  .project-card {
    @apply bg-white/60 backdrop-blur-sm border border-gray-100/50
           will-change-transform;
    height: 400px; /* Fixed height for all cards */
  }

  .card-inner {
    @apply p-7 flex flex-col h-full;
  }

  .icon-container {
    @apply mb-6 flex-shrink-0; /* Prevent icon from shrinking */
    height: 60px; /* Fixed height for icon container */
  }

  .icon-wrapper {
    @apply p-3.5 bg-gradient-to-br from-primary-50 via-primary-100/50 to-transparent 
           rounded-xl inline-flex text-primary-600/90 
           shadow-sm shadow-primary-100/50
           transition-all duration-500 ease-in-out;
  }

  .project-card:hover .icon-wrapper {
    @apply text-primary-600 shadow-primary-200/50 scale-105;
  }

  .content-container {
    @apply flex-grow flex flex-col min-h-0; /* Allow content to shrink if needed */
  }

  .text-content {
    @apply mb-4 flex-shrink-0; /* Prevent text from shrinking */
    height: 100px; /* Fixed height for text content */
  }

  .card-title {
    @apply text-lg font-medium text-gray-900 
           transition-colors duration-500 mb-2;
    height: 28px; /* Fixed height for title */
  }

  .project-card:hover .card-title {
    @apply text-primary-600;
  }

  .card-description {
    @apply text-gray-600 text-sm leading-relaxed line-clamp-3;
    height: 60px; /* Fixed height for description */
  }

  .tech-container {
    @apply flex-shrink-0; /* Prevent tech container from shrinking */
    height: 70px; /* Fixed height for tech container */
  }

  .tech-tags {
    @apply flex flex-wrap gap-1.5;
  }

  .tech-tag {
    @apply px-2.5 py-1 text-xs font-medium rounded-lg
           bg-gray-50/80 text-gray-600 border border-gray-100
           transition-all duration-500 ease-in-out;
  }

  .project-card:hover .tech-tag {
    @apply bg-primary-50/50 border-primary-100/50;
  }

  .more-tag {
    @apply px-2.5 py-1 text-xs font-medium rounded-lg 
           bg-gray-50/80 text-gray-500 border border-gray-100;
  }

  .links-container {
    @apply flex gap-5 pt-5 mt-auto border-t border-gray-100 flex-shrink-0; /* Push to bottom */
    height: 60px; /* Fixed height for links container */
  }

  .action-link {
    @apply inline-flex items-center text-sm font-medium text-gray-600 
           transition-colors duration-500;
  }

  .action-link:hover {
    @apply text-primary-600;
  }

  /* Smooth transition for the entire card */
  .project-card {
    @apply transition-all duration-500 ease-in-out;
  }

  .project-card:hover {
    @apply transform -translate-y-1 border-primary-100/50
           shadow-lg shadow-gray-100/50;
  }
</style>