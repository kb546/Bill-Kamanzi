---
import Card from '../ui/Card.astro';

interface Props {
  title: string;
  description: string;
  technologies: string[];
  category: string;
  githubUrl?: string;
  liveUrl?: string;
}

const { title, description, technologies, category, githubUrl, liveUrl } = Astro.props;

const categoryIcons = {
