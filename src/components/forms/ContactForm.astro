<form class="space-y-6">
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        required
        class="w-full px-4 py-3 rounded-lg border border-gray-200 
               focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50
               transition-colors duration-200 bg-white/50
               placeholder-gray-400"
        placeholder="Your name"
      />
    </div>
    
    <div>
      <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        required
        class="w-full px-4 py-3 rounded-lg border border-gray-200 
               focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50
               transition-colors duration-200 bg-white/50
               placeholder-gray-400"
        placeholder="your.email@example.com"
      />
    </div>
  </div>
  
  <div>
    <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
    <input
      type="text"
      name="subject"
      id="subject"
      required
      class="w-full px-4 py-3 rounded-lg border border-gray-200 
             focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50
             transition-colors duration-200 bg-white/50
             placeholder-gray-400"
      placeholder="What's this about?"
    />
  </div>
  
  <div>
    <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
    <textarea
      name="message"
      id="message"
      rows="4"
      required
      class="w-full px-4 py-3 rounded-lg border border-gray-200 
             focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50
             transition-colors duration-200 bg-white/50 resize-none
             placeholder-gray-400"
      placeholder="Your message here..."
    ></textarea>
  </div>
  
  <div>
    <button
      type="submit"
      class="w-full px-6 py-3 text-white bg-primary-600 rounded-lg
             hover:bg-primary-700 focus:outline-none focus:ring-2 
             focus:ring-primary-500 focus:ring-offset-2 
             transition-colors duration-200"
    >
      Send Message
    </button>
  </div>
</form>

<style>
  input, textarea {
    backdrop-filter: blur(8px);
  }

  input:focus, textarea:focus {
    outline: none;
    border-color: var(--color-primary-300);
  }
</style>