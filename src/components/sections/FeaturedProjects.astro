---
import ProjectCard from '../cards/ProjectCard.astro';

const featuredProjects = [
  {
    title: "Fraud Detection System",
    description: "Machine learning model to detect fraudulent transactions in retail self-scanning systems, optimizing loss prevention while maintaining customer satisfaction.",
    technologies: ["R", "Machine Learning", "Data Analysis", "Statistical Modeling"],
    category: "machine-learning",
    githubUrl: "https://github.com/kb546/Fraud-Detection-System"
  },
  {
    title: "The Rosa Restaurant",
    description: "Modern, responsive website for a restaurant featuring elegant UI/UX design, menu showcase, and seamless mobile experience.",
    technologies: ["HTML", "CSS", "JavaScript", "Responsive Design"],
    category: "web-development",
    githubUrl: "https://github.com/kb546/The-Rosa-Restaurant"
  },
  {
    title: "iHub Store",
    description: "Full-featured e-commerce platform for a phone retail business with product catalog and responsive design.",
    technologies: ["HTML", "CSS", "JavaScript", "E-commerce"],
    category: "web-development",
    githubUrl: "https://github.com/kb546/iHub-Store"
  }
];
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Featured Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredProjects.map(project => (
        <ProjectCard {...project} />
      ))}
    </div>
  </div>
</section>