---
import BlogCard from '../cards/BlogCard.astro';

const latestPosts = [
  {
    title: "Getting Started with Data Analysis in Python",
    excerpt: "Learn the fundamentals of data analysis using Python and essential libraries like Pandas and NumPy.",
    date: "2024-03-15",
    category: "Data Science",
    slug: "getting-started-data-analysis",
    imageUrl: "/images/blogs/data-analysis.jpg"
  },
  {
    title: "Building ML Models with scikit-learn",
    excerpt: "A comprehensive guide to creating and evaluating machine learning models using scikit-learn.",
    date: "2024-03-10",
    category: "Machine Learning",
    slug: "ml-models-sklearn",
    imageUrl: "/images/blogs/ml-models.jpg"
  },
  {
    title: "Data Visualization Best Practices",
    excerpt: "Essential tips and techniques for creating effective and engaging data visualizations.",
    date: "2024-03-05",
    category: "Data Visualization",
    slug: "data-viz-best-practices",
    imageUrl: "/images/blogs/data-viz.jpg"
  }
];
---

<section class="py-20 bg-primary-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Latest from the Blog</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {latestPosts.map(post => (
        <BlogCard {...post} />
      ))}
    </div>
  </div>
</section>