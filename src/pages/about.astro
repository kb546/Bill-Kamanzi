---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
---

<Layout title="About - Bill Kamanzi">
  <div class="pt-16">
    <section class="py-20 relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-96 h-96 rounded-full bg-primary-50/30"></div>
        <div class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-96 h-96 rounded-full bg-primary-100/20"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="text-center mb-16">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">About Me</h1>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Data Scientist & Full Stack Developer passionate about creating impactful solutions
          </p>
        </div>

        <!-- Main Content -->
        <div class="grid lg:grid-cols-12 gap-12 items-start">
          <!-- Profile Image -->
          <div class="lg:col-span-5 relative">
            <div class="aspect-square rounded-2xl overflow-hidden shadow-xl">
              <Image 
                src="/images/profile.jpg"
              alt="Bill Kamanzi"
                width={600}
                height={600}
                class="w-full h-full object-cover"
                format="webp"
            />
            </div>
            <!-- Decorative elements -->
            <div class="absolute -z-10 -bottom-6 -right-6 w-full h-full rounded-2xl bg-primary-100/20"></div>
          </div>

          <!-- Content -->
          <div class="lg:col-span-7 space-y-8">
          <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-4">Bill Kamanzi</h2>
              <div class="prose prose-lg text-gray-600 max-w-none">
              <p class="mb-4">
                  A passionate Data Scientist and Full Stack Developer with expertise in building data-driven 
                  applications and solving complex problems. With a background in both software development 
                  and data science, I bring a unique perspective to every project.
              </p>
              <p class="mb-4">
                 Recent Computer Science Graduate at Rochester Institute 
                 of Technology, I focus on leveraging technology to create meaningful solutions that drive 
                  business value and user satisfaction.
              </p>
              <p>
                  My approach combines analytical thinking with creative problem-solving, allowing me to 
                  tackle challenges from multiple angles and deliver comprehensive solutions.
                </p>
              </div>
            </div>

            <!-- Quick Stats -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 py-8">
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600 mb-2">1</div>
                <div class="text-sm text-gray-600">Year Experience</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600 mb-2">20+</div>
                <div class="text-sm text-gray-600">Projects Completed</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600 mb-2">15+</div>
                <div class="text-sm text-gray-600">Technologies</div>
              </div>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-wrap gap-4 pt-4">
              <a 
                href="/contact" 
                class="inline-flex items-center px-6 py-3 border border-transparent rounded-lg 
                       text-base font-medium text-white bg-primary-600 hover:bg-primary-700 
                       transition-all duration-200 hover:shadow-lg"
              >
                Get in Touch
              </a>
              <a 
                href="/images/Bill-Kamanzi-Resume.pdf"
                download="Bill-Kamanzi-Resume.pdf"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg 
                       text-base font-medium text-gray-700 bg-white hover:bg-gray-50 
                       transition-all duration-200 hover:shadow-md group"
              >
                <span>Download Resume</span>
                <svg 
                  xmlns="http://www.w3.org/2000/svg" 
                  class="h-5 w-5 ml-2 group-hover:transform group-hover:translate-y-0.5 transition-transform" 
                  viewBox="0 0 20 20" 
                  fill="currentColor"
                >
                  <path 
                    fill-rule="evenodd" 
                    d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" 
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- After the main content grid, add this section -->
        <div class="mt-24">
          <div class="grid md:grid-cols-2 gap-12">
            <!-- Education Section -->
            <div class="space-y-8">
              <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path d="M12 14l9-5-9-5-9 5 9 5z" />
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                </svg>
                Education
              </h2>

              <div class="relative pl-6 border-l-2 border-primary-100">
                <div class="mb-10 last:mb-0">
                  <div class="absolute w-3 h-3 bg-primary-500/20 border-2 border-primary-500 rounded-full -left-[7px]"></div>
                  <h3 class="text-lg font-semibold text-gray-900">Rochester Institute of Technology</h3>
                  <p class="text-primary-600 font-medium mt-0.5">BS in Computer Science and Information Technology</p>
                  <div class="mt-1 flex items-center gap-2 text-sm text-gray-500">
                    <span>January 2020 – May 2024</span>
                    <span class="text-primary-200">•</span>
                    <span>Dubai, UAE</span>
                  </div>
                  <p class="text-sm text-gray-600 mt-1">Minor: Data Analytics | CGPA: 3.30/4.00</p>
                </div>
              </div>
            </div>

            <!-- Experience Section -->
            <div class="space-y-8">
              <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Experience
              </h2>

              <div class="relative pl-6 border-l-2 border-primary-100">
                <!--LTV -->
                <div class="mb-10">
                  <div class="absolute w-3 h-3 bg-primary-500/20 border-2 border-primary-500 rounded-full -left-[7px]"></div>
                  <h3 class="text-lg font-semibold text-gray-900">Long Tail Ventures</h3>
                  <p class="text-primary-600 font-medium mt-0.5">Trainee in Performance Marketing & Data Analysis</p>
                  <div class="mt-1 flex items-center gap-2 text-sm text-gray-500">
                    <span>January 2025 - Present</span>
                    <span class="text-primary-200">•</span>
                    <span>Dubai, UAE</span>
                  </div>
                </div>
                <!-- Accenture -->
                <div class="mb-10">
                  <div class="absolute w-3 h-3 bg-primary-500/20 border-2 border-primary-500 rounded-full -left-[7px]"></div>
                  <h3 class="text-lg font-semibold text-gray-900">Accenture North America</h3>
                  <p class="text-primary-600 font-medium mt-0.5">Data Analytics and Visualization Job Simulation</p>
                  <div class="mt-1 flex items-center gap-2 text-sm text-gray-500">
                    <span>August 2024</span>
                    <span class="text-primary-200">•</span>
                    <span>Dubai, UAE</span>
                  </div>
                </div>

                <!-- DP World -->
                <div class="mb-10">
                  <div class="absolute w-3 h-3 bg-primary-500/20 border-2 border-primary-500 rounded-full -left-[7px]"></div>
                  <h3 class="text-lg font-semibold text-gray-900">DP World</h3>
                  <p class="text-primary-600 font-medium mt-0.5">IT Intern</p>
                  <div class="mt-1 flex items-center gap-2 text-sm text-gray-500">
                    <span>July 2023 – September 2023</span>
                    <span class="text-primary-200">•</span>
                    <span>Dubai, UAE</span>
                  </div>
                </div>

                <!-- CrimsonLogic -->
                <div class="mb-10">
                  <div class="absolute w-3 h-3 bg-primary-500/20 border-2 border-primary-500 rounded-full -left-[7px]"></div>
                  <h3 class="text-lg font-semibold text-gray-900">CrimsonLogic</h3>
                  <p class="text-primary-600 font-medium mt-0.5">IT Intern</p>
                  <div class="mt-1 flex items-center gap-2 text-sm text-gray-500">
                    <span>May 2022 – August 2022</span>
                    <span class="text-primary-200">•</span>
                    <span>Abu Dhabi, UAE</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .prose {
    max-width: none;
  }
</style>