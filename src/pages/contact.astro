---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Bill Kamanzi">
  <div class="pt-16">
    <section class="py-20 relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 -z-10 overflow-hidden opacity-40">
        <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-[600px] h-[600px] rounded-full 
                    bg-gradient-to-b from-primary-50/30 via-primary-100/20 to-transparent blur-3xl"></div>
        <div class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-[600px] h-[600px] rounded-full 
                    bg-gradient-to-t from-primary-50/30 via-primary-100/20 to-transparent blur-3xl"></div>
      </div>

      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h1 class="text-3xl font-medium text-gray-900 mb-3">Let's Connect</h1>
          <p class="text-base text-gray-500">
            Follow my blogs and connect with me on social media
          </p>
        </div>

        <!-- Two-column grid for contact cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Column 1: Professional Networks -->
          <div class="space-y-6">
            <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-6">Professional Networks</h2>
            
            <!-- LinkedIn -->
            <a href="https://www.linkedin.com/in/bill-kamanzi/" 
               target="_blank"
               class="contact-card group block">
              <div class="p-6 flex items-center gap-6">
                <div class="shrink-0 p-3 rounded-xl bg-gradient-to-br from-primary-50 to-transparent">
                  <svg class="w-5 h-5 text-primary-600/80 group-hover:text-[#0A66C2]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">LinkedIn</h3>
                  <p class="text-base text-gray-900 group-hover:text-[#0A66C2] transition-colors duration-200">
                    Connect on LinkedIn
                  </p>
                </div>
              </div>
            </a>

            <!-- GitHub -->
            <a href="https://github.com/kb546" 
               target="_blank"
               class="contact-card group block">
              <div class="p-6 flex items-center gap-6">
                <div class="shrink-0 p-3 rounded-xl bg-gradient-to-br from-primary-50 to-transparent">
                  <svg class="w-5 h-5 text-primary-600/80 group-hover:text-gray-900" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">GitHub</h3>
                  <p class="text-base text-gray-900 group-hover:text-gray-900 transition-colors duration-200">
                    View Projects on GitHub
                  </p>
                </div>
              </div>
            </a>

            <!-- Email -->
            <div class="contact-card group">
              <div class="p-6 flex items-center gap-6">
                <div class="shrink-0 p-3 rounded-xl bg-gradient-to-br from-primary-50 to-transparent">
                  <svg class="w-5 h-5 text-primary-600/80" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Email</h3>
                  <a href="mailto:Bikamanzi@gmail.com" 
                     class="text-base text-gray-900 hover:text-primary-600 transition-colors duration-200">
                    Bikamanzi@gmail.com
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Column 2: Blog Platforms -->
          <div class="space-y-6">
            <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-6">Blog Platforms</h2>
            
            <!-- Medium Blog -->
            <a href="https://medium.com/@bill_65246" 
               target="_blank"
               class="contact-card group block">
              <div class="p-6 flex items-center gap-6">
                <div class="shrink-0 p-3 rounded-xl bg-gradient-to-br from-primary-50 to-transparent">
                  <svg class="w-5 h-5 text-primary-600/80 group-hover:text-[#000000]" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Medium Blog</h3>
                  <p class="text-base text-gray-900 group-hover:text-[#000000] transition-colors duration-200">
                    Follow my articles on Medium
                  </p>
                </div>
              </div>
            </a>

            <!-- Studio Pulse Blog -->
            <a href="https://bill93362.wixsite.com/studio-pulse-1" 
               target="_blank"
               class="contact-card group block">
              <div class="p-6 flex items-center gap-6">
                <div class="shrink-0 p-3 rounded-xl bg-gradient-to-br from-primary-50 to-transparent">
                  <svg class="w-5 h-5 text-primary-600/80 group-hover:text-[#ED1C24]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                          d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Studio Pulse Blog</h3>
                  <p class="text-base text-gray-900 group-hover:text-[#ED1C24] transition-colors duration-200">
                    Read my music insights
                  </p>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .contact-card {
    @apply bg-white/60 backdrop-blur-md rounded-2xl border border-gray-100 
           hover:border-primary-100 transition-all duration-300 hover:shadow-sm;
  }
</style>